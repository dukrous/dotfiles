{
  "layer": "bottom",
  "position": "top",
  "margin-top": 4,
  "margin-bottom": 0,
  "margin-left": 10,
  "margin-right": 10,
  "spacing": 8, // Gaps between modules (8px)

  "modules-left": [
    "custom/launcher",
    "niri/workspaces",
    "cpu",
    "temperature",
    "custom/gpu"
  ],
  "custom/launcher":{
    "format": "ÔåÉ",
    "width": "40",
    "on-click": "fuzzel --config ~/.config/fuzzel/launcher.ini || pkill fuzzel",
    "on-click-right": "pkill fuzzel",
    "tooltip": false,
  },
  "modules-center": [
    //"wlr/taskbar",
    "niri/window"
  ],
  "modules-right": [
    "tray",
    "custom/notifications",
    "wireplumber",
    "clock"
  ],
  "custom/notifications": {
    "tooltip": true,
    "format": "<span size='16pt'>{icon}</span>",
    "format-icons": {
        "notification": "Û±Ö´",
        "none": "Û∞Çú",
        "dnd-notification": "Û∞Ç†",
        "dnd-none": "Û∞™ì",
        "inhibited-notification": "Û∞Çõ",
        "inhibited-none": "Û∞™ë",
        "dnd-inhibited-notification": "Û∞Çõ",
        "dnd-inhibited-none": "Û∞™ë"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "wlr/taskbar": {
    "tooltip-format": "{app_id}"
  },
  "niri/window": {
    "tooltip": false
  },
  "clock": {
    "format": "ÔÄó {:%I:%M %p}",
    "format-alt": "Ó™∞ {:%b %d, %Y}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode"          : "month",
      "format": {
        "months":     "<span color='#ffead3'><b>{}</b></span>",
        "days":       "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
        "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
  },
  "niri/language": {
    "format": "{short}",
  },
  "wireplumber": {
    "on-click": "pavucontrol",
    "on-click-middle": "python ~/.config/niri/volume.py",
    "on-click-right": "amixer sset Master toggle 1>/dev/null",
    "on-scroll-down": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.05-",
    "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.05+",
    "format": "{icon} {volume}%",
    "format-source": "ÔÑ∞ ",
    "format-source-muted": "ÔÑ± ",
    "format-muted": "<span foreground='#fab387'>Ôë¶ MUT</span>",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "Ôäî ",
      "headset": "Ôäî ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": "ÔÄ® "
      //"default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
    },
    "justify": "center"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 5,
    "show-passive-items": true
  },
  "niri/workspaces": {
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "main": "Û∞çπ",
      "games": "Û∞äó",
      "default": "ÔÑë"
    },
    //"on-scroll-up": "hyprctl dispatch workspace e+1 1>/dev/null",
    //"on-scroll-down": "hyprctl dispatch workspace e-1 1>/dev/null",
    "sort-by-number": true,
    "active-only": false,
    "justify": "center",
  },

  "cpu": {
    "format": "Ôíº {usage}% {max_frequency:0.1f}GHz",
    "on-click": "kitty -e btop",
    "interval": 3,
    //"max-length": 14,
    //"min-length": 14,
    "justify": "center",
    "tooltip": false
  },
  "memory": {
    "format": "ÓøÖ {used:0.1f}G {swapUsed:0.1f}G",
    "interval": 3,
    "justify": "center",
    "tooltip": false
  },
  "custom/gpu": {
    "exec": "~/.config/waybar/modules/gpu-niri.sh",
    "format": "<span color=\"#ffe6ff\">{}</span>",
    "return-type": "json",
    "interval": 3,
    "justify": "center",
    "tooltip": false
  },
  "custom/storage": {
    "format": "üíæ {}G",
    "format-alt": "üíæ {percentage}%",
    "format-alt-click": "click",
    "return-type": "json",
    "interval": 60,
    "exec": "~/.config/waybar/modules/storage.sh",
    "justify": "center",
    "tooltip": false
  },
  "temperature": {
    //"thermal-zone": 1,
    "interval": 3,
    "hwmon-path-abs": "/sys/devices/pci0000:00/0000:00:18.3/hwmon",
    "input-filename": "temp3_input",
    "critical-threshold": 80,
    "format-critical": "ÔÅ± {temperatureC}¬∞C",
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôãâ"],
    //"max-length": 20,
    //"min-length": 7,
    "tooltip": false
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}{percent}%",
    "format-icons": ["Û∞Éû ","Û∞Éü ","Û∞É† "],
    "on-scroll-down": "brightnessctl s 5%-",
    "on-scroll-up": "brightnessctl s +5%",
    "justify": "center",
    "tooltip": false
  },
  "battery": {
    "interval": 30,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}",
    "format-charging": "ÔñÉ {capacity}",
    "format-plugged": "Ôá¶ {capacity}",
    "format-icons": [
      "ÔâÑ ",
      "ÔâÉ ",
      "ÔâÇ ",
      "ÔâÅ ",
      "ÔâÄ "
    ],
    "justify": "center"
  },
  "custom/power": {
    "format": " ÔÄë ",
    "tooltip": false,
    "on-click": "wlogout",
    "justify": "center"
  }
}
